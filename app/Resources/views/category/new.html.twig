{% extends 'back.html.twig' %}

{% block content %}
    <h3>Category creation</h3>

    {{ form_start(form) }}
        
        <div class="form-group {% if form.libelle.vars.errors | length > 0 %}has-danger{% endif %}  ">
            {{ form_row(form.libelle , { 'required':false, 'attr': {"class" : 'form-control'} } )  }}    
        </div>
        <div class="form-group {% if form.slug.vars.errors | length > 0 %} has-danger {% endif %} slug">
            {{ form_row(form.slug , { 'required':false, 'attr': {"class" : 'form-control'} } )  }}    
        </div>
        <div class="form-group {% if form.description.vars.errors | length > 0 %} has-danger {% endif %} ">
            {{ form_row(form.description , { 'required':false, 'attr': {"class" : 'form-control'} } )  }}    
        </div>
        <hr>
        <input class="btn btn-primary" type="submit" value="Enregistrer" />
        <a class="btn btn-warning" href="{{ path('admin_category_index') }}">Retour</a>
    {{ form_end(form) }}

    
{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
            <li class="breadcrumb-item"><a href="#">Liste des catégories</a></li>
            <li class="breadcrumb-item active" aria-current="page">Nouvelle catégourie</li>
        </ol>
    </nav>
{% endblock %}
