{% extends 'back.html.twig' %}

{% block content %}
    <h3>{{post.titre}}</h3>
    <div class="row">
        
        <div class="col-md-8">
            {{ form_start(edit_form) }}
            <div class="form-group">
                {{ form_row(edit_form.titre, {'attr': {"class": "form-control"}}) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_form.slug, {'attr': {"class": "form-control"}}) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_form.description, {'attr': {"class": "form-control"}}) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_form.body, {'attr': {"class": "form-control"}}) }}
            </div>

        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_row(edit_form.image, {'attr': {"class": "form-control"}}) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_form.datepublish, {'attr': {"class": "form-control"}}) }}
            </div>

            <div class="form-group">
                {{ form_row(edit_form.categories, {'attr': {"class": "form-control"}}) }}
            </div>

            <input class="btn btn-warning" type="submit" value="Editer " />
            <a class="btn btn-info" href="{{ path('admin_post_index') }}">Retour</a>
        </div>
        

        {{ form_end(edit_form) }}

    </div>

{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
            <li class="breadcrumb-item"><a href="#">Liste des posts</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ post.titre }}</li>
        </ol>
    </nav>
{% endblock %}
